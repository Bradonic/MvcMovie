@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="hea">Movie List</h1>
<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<form asp-controller="Movies" asp-action="Index" method="get">
    <p>
        <div class="input-group mb-3">
            <div class="col-xs-2">
                <select class="custom-select" asp-for="MovieGenre" asp-items="Model.Genres">
                    <option value="">All</option>
                </select>
            </div>
            <div class="col-xs-2">
                <input type="text" name="SearchString" class="form-control" placeholder="Title">
            </div>
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit">Filter</button>
            </div>
        </div>
        <!---Title: <input type="text" name="SearchString" />
    <input class="btn btn-success" type="submit" value="Filter" />-->
    </p>
</form>
<div class="col-12 border p-3 mt-3">
    <table class="table table-striped border">
        <thead>
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Rating)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movies)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>